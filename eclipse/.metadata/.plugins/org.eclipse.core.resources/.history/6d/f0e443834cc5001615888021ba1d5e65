import numpy as np
from matplotlib import pyplot as pp

if __name__ == '__main__':
    
    SIN_FREQUENCY = 16
    SIN_NUM_OF_PERS = 1
    SIN_SAMPLES_PER_PER = 32
    SIN_SAMPLE_RATE = SIN_SAMPLES_PER_PER*SIN_FREQ
    
    x = np.sin( 2*np.pi*SIN_FREQ/SIN_SAMPLE_RATE*np.arange( SIN_NUM_OF_PERS*SIN_SAMPLE_RATE ) ) 
    
    pp.figure()
    pp.plot( x )
    pp.show()
    pass